{
    "logging": {
        "version": 1,
        "disable_existing_loggers": false,
        "formatters": {
            "detailed": {
                "format": "%(asctime)s - %(name)s - %(levelname)s - [%(filename)s:%(lineno)d] - %(message)s",
                "datefmt": "%Y-%m-%d %H:%M:%S"
            },
            "simple": {
                "format": "%(asctime)s - %(levelname)s - %(message)s",
                "datefmt": "%Y-%m-%d %H:%M:%S"
            },
            "json": {
                "format": "{\"timestamp\": \"%(asctime)s\", \"level\": \"%(levelname)s\", \"logger\": \"%(name)s\", \"message\": \"%(message)s\", \"file\": \"%(filename)s\", \"line\": %(lineno)d}"
            }
        },
        "handlers": {
            "file_handler": {
                "class": "logging.handlers.RotatingFileHandler",
                "filename": "logs/app.log",
                "maxBytes": 10485760,
                "backupCount": 5,
                "formatter": "detailed",
                "level": "INFO"
            },
            "error_file_handler": {
                "class": "logging.handlers.RotatingFileHandler",
                "filename": "logs/error.log",
                "maxBytes": 10485760,
                "backupCount": 5,
                "formatter": "detailed",
                "level": "ERROR"
            },
            "console_handler": {
                "class": "logging.StreamHandler",
                "formatter": "simple",
                "level": "INFO"
            },
            "performance_handler": {
                "class": "logging.handlers.RotatingFileHandler",
                "filename": "logs/performance.log",
                "maxBytes": 10485760,
                "backupCount": 3,
                "formatter": "json",
                "level": "INFO"
            }
        },
        "loggers": {
            "CommonServices": {
                "handlers": ["file_handler", "error_file_handler"],
                "level": "INFO",
                "propagate": false
            },
            "Modules": {
                "handlers": ["file_handler", "error_file_handler"],
                "level": "INFO",
                "propagate": false
            },
            "app": {
                "handlers": ["file_handler", "error_file_handler"],
                "level": "INFO",
                "propagate": false
            },
            "performance": {
                "handlers": ["performance_handler"],
                "level": "INFO",
                "propagate": false
            }
        },
        "root": {
            "handlers": ["console_handler", "file_handler"],
            "level": "INFO"
        }
    },
    "log_retention": {
        "days": 7,
        "max_size_mb": 100,
        "compress_old_logs": true
    },
    "performance_logging": {
        "enabled": true,
        "track_memory": true,
        "track_cpu": true,
        "track_disk": true,
        "interval_seconds": 300
    },
    "debug_mode": {
        "enabled": false,
        "console_output": true,
        "detailed_tracebacks": true
    }
}
